<?xml version="1.0" encoding="utf-8"?>
<locale name="en_us_test" lang="en_us" display_name="US English, Testing">
    <shell src="locales/en_us_test/textures/gameui.png" />
    <map src="locales/en_us_test/map.tmx" />
    <music src="locales/en_us_rural/sounds/background.mp3" />

    <inventory name="InventoryTest" col="1" row="2" block="locales/en_us_test/textures/inventory.png" />

    <market name="MarketTest" col="2" row="1" block="locales/en_us_test/textures/market.png" />

    <people>
        <person name="Konqi" texture="locales/en_us_test/textures/persons/konqi.png" />
        <person name="Tux" texture="locales/en_us_test/textures/persons/tux.png" />
    </people>

    <letters>
        <letter name="a" buy="1"  sell="1"  time="10" points="100" sprite="locales/en_us_test/textures/letters/sprites/a.png" block="locales/en_us_test/textures/letters/blocks/a.png" sound="locales/en_us_test/sounds/a.ogg" phoneme="locales/en_us_test/phonemes/a.ogg">a</letter>
        <letter size="2x3" restrict="test" name="b" buy="2"  sell="2"  time="20" points="200" sprite="locales/en_us_test/textures/letters/sprites/b.png" block="locales/en_us_test/textures/letters/blocks/b.png" sound="locales/en_us_test/sounds/b.ogg" phoneme="locales/en_us_test/phonemes/b.ogg">b</letter>
    </letters>

    <words>
        <word name="ab" buy="10" sell="1" construct="10" time="10" points="100" sprite="locales/en_us_test/textures/words/sprites/ab.png" block="locales/en_us_test/textures/words/blocks/ab.png" sound="locales/en_us_test/sounds/ab.ogg">cat</word>
        <word size="4x5" restrict="test" name="ba" buy="20" sell="2" construct="20" time="20" points="200" sprite="locales/en_us_test/textures/words/sprites/ba.png" block="locales/en_us_test/textures/words/blocks/ba.png" sound="locales/en_us_test/sounds/ba.ogg">hat</word>
    </words>
    
    <levels>
        <level name="test1" market="0" coins="100">
            <intro>
                <page sound="locales/en_us_test/sounds/intro1p1.ogg">Test level 1 intro page 1</page>
                <page sound="locales/en_us_test/sounds/intro1p2.ogg" texture="locales/en_us_test/textures/intro1p2.png">Test level 1 intro page 2</page>
            </intro>
            <letters>a,b</letters>
            <help>
                <letters>a</letters>x
                y<words></words>z
            </help>
            <words></words>
            <req>
                <gather_letter count="1">a</gather_letter>
            </req>
        </level>
        <level name="test2" market="1" coins="200">
            <intro>
                <page sound="locales/en_us_test/sounds/intro2p1.ogg">Test level 2 intro page</page>
            </intro>
            <letters>a,b</letters>
            <words>ab</words>
            <help>
                <letters>a,b</letters>
                <words>ab</words>
            </help>
            <req>
                <gather_word count="1">ab</gather_word>
            </req>
        </level>
    </levels>
</locale>
