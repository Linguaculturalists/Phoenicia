<?xml version="1.0" encoding="utf-8"?>
<locale name="sw_tz_village" lang="en_us" display_name="Kiswahili, Tanzania Village">
    <shell src="locales/common/textures/gameui.png" />
    <map src="locales/sw_tz_village/map.tmx" />
    <music src="locales/sw_tz_village/sounds/background.ogg" />

    <!-- default blocks -->
    <inventory name="Barn" col="37" row="43" block="locales/en_us_rural/textures/inventory.png" />
    <market name="Market" col="41" row="41" block="locales/sw_tz_village/textures/market.png" />

    <people>
        <person name="Konqi" texture="locales/common/textures/persons/konqi.png" />
        <person name="Roxanne" texture="locales/common/textures/persons/Roxanne.png" />
        <person name="Tux" texture="locales/common/textures/persons/tux.png" />
    </people>

    <letters>
        <letter name="i" buy="0" sell="1" points="1" time="30" sprite="locales/common/textures/letters/sprites/i.png" block="locales/common/textures/letters/blocks/i.png" sound="locales/sw_tz_village/sounds/i.ogg" phoneme="locales/sw_tz_village/sounds/i.ogg">i</letter>
        <letter name="k" buy="3" sell="2" points="1" time="30" sprite="locales/common/textures/letters/sprites/k.png" block="locales/common/textures/letters/blocks/k.png" sound="locales/sw_tz_village/sounds/k.ogg" phoneme="locales/sw_tz_village/sounds/k.ogg">k</letter>
        <letter name="t" buy="5"  sell="3"  points="1" time="10" sprite="locales/common/textures/letters/sprites/t.png" block="locales/common/textures/letters/blocks/t.png" sound="locales/sw_tz_village/sounds/t-name.ogg" phoneme="locales/sw_tz_village/sounds/t-phoneme.ogg">t</letter>
        <letter name="u" buy="0" sell="1" points="1" time="30" sprite="locales/common/textures/letters/sprites/u.png" block="locales/common/textures/letters/blocks/u.png" sound="locales/sw_tz_village/sounds/u.ogg" phoneme="locales/sw_tz_village/sounds/u.ogg">u</letter>
    </letters>
    <words>
        <word name="kiti" buy="100" sell="10" points="10" construct="20" time="60" sprite="locales/common/textures/words/sprites/bat.png" block="locales/common/textures/words/blocks/bat.png" sound="locales/sw_tz_village/sounds/kiti.ogg">kiti</word>
        <word name="kuku" buy="300" sell="30" points="30" construct="20" time="90" sprite="locales/common/textures/words/sprites/chicken.png" block="locales/common/textures/words/blocks/chicken.png" sound="locales/sw_tz_village/sounds/kuku.ogg">kuku</word>
    </words>
    <levels>
        <level name="1" market="1" coins="42">
            <intro>
                <page sound="locales/sw_tz_village/sounds/intro1p1.ogg">Jambo!</page>
                <page sound="locales/sw_tz_village/sounds/intro1p2.ogg">This is an example locale pack. It will show you how Phoenicia can be adapted to different languages and locations without needing to write any code or generate lots of new content</page>
            </intro>
            <letters>k,u</letters>
            <words>kuku</words>
            <help>
                <letters>k,u</letters>
                <words>kuku</words>
            </help>
            <req>
                <gather_letter count="1">k,u</gather_letter>
            </req>
        </level>
        <level name="5" market="3" coins="100">
            <intro>
                <page sound="locales/sw_tz_village/sounds/intro5p1.ogg">Every locale pack contains it's own set of words specific to it's language</page>
                <page sound="locales/sw_tz_village/sounds/intro5p2.ogg">This works for any language with a phonetic or even semi-phonetic alphabet</page>
            </intro>
            <letters>t,i</letters>
            <words>kiti</words>
            <help>
                <letters>k,t</letters>
                <words>kiti,kuku</words>
            </help>
        </level>
    </levels>
</locale>
